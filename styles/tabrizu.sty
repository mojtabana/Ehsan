% فونت عناوین فصل
\newfontfamily\chapterfont[Path=../fonts/,Extension=.TTF,Scale=1.3]{B-NAZANIN}
\titleformat{\chapter}[display]
  {\normalfont\chapterfont\bfseries}  % فونت + پررنگ
  {\chaptername\ \thechapter}{20pt}{\Huge}

% فونت بخش‌ها و زیر بخش‌ها
\newfontfamily\sectionfont[Path=../fonts/,Extension=.TTF,Scale=1.2]{B-NAZANIN}
\titleformat{\section}{\sectionfont\bfseries\Large}{\thesection}{1em}{}
\titleformat{\subsection}{\sectionfont\bfseries\large}{\thesubsection}{1em}{}

